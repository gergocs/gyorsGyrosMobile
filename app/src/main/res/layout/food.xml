<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="291dp" android:layout_marginBottom="115dp"
    >
        <RelativeLayout android:layout_height="290dp" android:layout_width="match_parent">

            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/element_text"/>
            <ImageView
                    android:id="@+id/row_wallet_redeem_img"
                    android:layout_width="230dp"
                    android:layout_height="198dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitEnd"
                    android:src="@drawable/gyros" android:contentDescription="@string/image_of_the_food"
                    android:layout_alignParentStart="true" android:layout_marginStart="0dp"
                    android:layout_marginTop="2dp" android:layout_below="@+id/name"/>
            <TextView
                    android:id="@+id/ingredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/element_text" android:layout_marginBottom="-21dp"
                    android:layout_alignBottom="@+id/row_wallet_redeem_img"/>
            <Button
                    android:drawableBottom="@drawable/ic_baseline_add_shopping_cart_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addToCart"
                    android:layout_marginBottom="-49dp"
                    android:layout_alignBottom="@+id/ingredients"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
